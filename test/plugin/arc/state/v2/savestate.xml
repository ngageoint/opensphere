      <minResolution>0</minResolution>
      <maxResolution>Infinity</maxResolution>
      <showLabels>false</showLabels>
      <shapeName>Default</shapeName>
      <timeEnabled>true</timeEnabled>
      <basicFeatureStyle>
        <pointOpacity>255</pointOpacity>
        <pointColor>ffffff</pointColor>
        <pointSize>6</pointSize>
        <labelSize>12</labelSize>
      </basicFeatureStyle>
    </layer>
    <layer type="arctile">
      <id>fakeId#tiles</id>
      <layerType>Tile and Feature Groups</layerType>
      <providedBy>ArcGIS Server</providedBy>
      <animate>true</animate>
      <url>https://fake.server.com/arcgis/services/rest/SomeLayer/MapServer</url>
      <params>
        <layers>show: 3</layers>
      </params>
      <title>My Arc Layer</title>
      <baseColor>0x8400a8</baseColor>
      <timeParam>time</timeParam>
      <timeFormat>{start},{end}</timeFormat>
      <dateFormat>timestamp</dateFormat>
      <visible>true</visible>
      <minResolution>0</minResolution>
      <maxResolution>Infinity</maxResolution>
      <basicFeatureStyle>
        <pointOpacity>255</pointOpacity>
      </basicFeatureStyle>
    </layer>
  </layers>
</state>
