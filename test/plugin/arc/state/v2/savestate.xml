<state xmlns="http://www.bit-sys.com/state/v2" source="MIST Beta (dev (b1a38a6))">
  <title>Arc State Again</title>
  <layers type="data">
    <layer type="arcfeature">
      <id>fakeId#tiles</id>
      <layerType>Tile and Feature Groups</layerType>
      <animate>true</animate>
      <url>https://fake.server.com/arcgis/services/rest/SomeLayer/MapServer/query</url>
      <params>
        <f>json</f>
        <inSR>4326</inSR>
        <outSR>4326</outSR>
        <outFields>*</outFields>
        <geometryType>esriGeometryPolygon</geometryType>
        <geometry>{geom}</geometry>
        <returnIdsOnly>true</returnIdsOnly>
        <time>{time}</time>
      </params>
